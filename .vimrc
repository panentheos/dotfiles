set nocompatible

set backspace=2
set hidden
set history=100

set ruler
set laststatus=2
set listchars=tab:»\ ,trail:·
set modeline
set nowarn
set nowrap
set pastetoggle=<F10>
set report=0
set shortmess=at
set showmatch
set showmode
set textwidth=78
set wildchar=<TAB>
set wildmode=list

set autoindent
set shiftwidth=2
set shiftround
set smarttab
set expandtab
set tabstop=8

set incsearch
set nohlsearch

syntax on
filetype on

au FileType python set tw=0
au FileType xhtml set tw=0
