set nocompatible

set backspace=2
set hidden
set history=100

set ruler
set laststatus=2
set listchars=tab:»\ ,trail:·
set modeline
set nowarn
set nowrap
set pastetoggle=<F10>
set report=0
set shortmess=at
set showmatch
set showmode
set textwidth=0
set wildchar=<TAB>
set wildmode=longest,list

set autoindent
set shiftwidth=3
set shiftround
set smarttab
set expandtab
set tabstop=8

set incsearch
set nohlsearch

syntax on
filetype on
